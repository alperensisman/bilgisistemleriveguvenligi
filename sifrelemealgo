using System;
using System.Text;
					
public class Program
{
	public static string sifrele(string text,string sifre) {
		int xor=sifreReturn(sifre);
		StringBuilder sb = new StringBuilder();
		foreach(int c in text.ToCharArray()) sb.Append((char)((int)c ^ xor));
		return sb.ToString();
	}
	
	public static int sifreReturn(string sifre) {
		int xorsifre = 0;
		foreach(int c in sifre.ToCharArray()) xorsifre+=c;
		xorsifre=xorsifre%124;
		
		return xorsifre;
	}
	
	public static string solveSifre(string text,string sifre) {
	    int xor=sifreReturn(sifre);
		StringBuilder sb = new StringBuilder();
		foreach(int c in text.ToCharArray()) sb.Append((char)((int)c ^ xor));
		return sb.ToString();
	
	}
	
	
	
	public static void Main()
	{
		string sifrelenecekMetin="Selam Ben Alperen Şişman";
		string sifre ="Password";
		string sifreli=sifrele(sifrelenecekMetin,sifre);
		
		Console.WriteLine("Sifreli:");
		Console.WriteLine(sifreli);
		
		Console.WriteLine("Çözümü:");
		Console.WriteLine(solveSifre(sifreli,sifre));
	}
}
